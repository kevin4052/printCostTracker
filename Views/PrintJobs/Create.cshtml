@model printCostTracker.Models.PrintJob

@{
    ViewData["Title"] = "Create Print Job";
}

<h1>Create Print Job</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            
            
            <div class="form-group mb-3">
                <label for="PrinterId" class="control-label">Printer</label>
                <select id="PrinterId" name="PrinterId" class="form-control">
                    <option value="">-- Select Printer --</option>
                    @if (ViewBag.Printers != null)
                    {
                        @foreach (var printer in ViewBag.Printers)
                        {
                            <option value="@printer.Id">@printer.Name - @printer.Brand @printer.Model</option>
                        }
                    }
                </select>
                <small class="form-text text-muted">Select the printer to use for this job</small>
            </div>
            
            <div class="form-group mb-3">
                <label for="PrintSettings" class="control-label">Print Settings</label>
                <textarea id="PrintSettings" name="PrintSettings" class="form-control" rows="2" placeholder="Layer height, infill, speed, etc."></textarea>
                <small class="form-text text-muted">Optional: Document important print settings</small>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Notes</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Add plates, parts, and costs after creating the job.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // No dynamic cost estimation on create; costs are managed via Costs/Plates after creation
        });
    </script>
} 