@model printCostTracker.Models.PrintJob

@{
    ViewData["Title"] = "Edit Print Job";
}

<h1>Edit Print Job</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedAt" />
            
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="MaterialId" class="control-label">Material</label>
                <select asp-for="MaterialId" class="form-control" id="MaterialId">
                    <option value="">-- Select Material --</option>
                    @foreach (var material in ViewBag.Materials)
                    {
                        <option value="@material.Id" data-cost-per-gram="@material.CostPerGram">@material.Name - $@material.CostPerGram/g</option>
                    }
                </select>
                <span asp-validation-for="MaterialId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="MaterialWeight" class="control-label">Material Weight (grams)</label>
                <input asp-for="MaterialWeight" class="form-control" type="number" step="0.01" min="0" id="MaterialWeight" />
                <span asp-validation-for="MaterialWeight" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="EstimatedPrintTime" class="control-label">Estimated Print Time (hours)</label>
                <input asp-for="EstimatedPrintTime" class="form-control" type="number" step="0.1" min="0" />
                <span asp-validation-for="EstimatedPrintTime" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="PrinterId" class="control-label">Printer</label>
                <select asp-for="PrinterId" class="form-control">
                    <option value="">-- Select Printer --</option>
                    @if (ViewBag.Printers != null)
                    {
                        @foreach (var printer in ViewBag.Printers)
                        {
                            <option value="@printer.Id">@printer.Name - @printer.Brand @printer.Model</option>
                        }
                    }
                </select>
                <span asp-validation-for="PrinterId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="PrintSettings" class="control-label">Print Settings</label>
                <textarea asp-for="PrintSettings" class="form-control" rows="2" placeholder="Layer height, infill, speed, etc."></textarea>
                <span asp-validation-for="PrintSettings" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="TotalCost" class="control-label">Total Cost ($)</label>
                <input asp-for="TotalCost" class="form-control" type="number" step="0.01" min="0" id="TotalCost" readonly />
                <small class="form-text text-muted">Calculated automatically based on material cost</small>
                <span asp-validation-for="TotalCost" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="CompletedAt" class="control-label">Completed At</label>
                <input asp-for="CompletedAt" class="form-control" type="datetime-local" />
                <small class="form-text text-muted">Leave empty if job is still in progress</small>
                <span asp-validation-for="CompletedAt" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Cost Estimation</h5>
            </div>
            <div class="card-body">
                <div id="costEstimation">
                    <p class="text-muted">Select a material and enter weight to see cost estimation</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Cost estimation functionality
        document.addEventListener('DOMContentLoaded', function() {
            const materialSelect = document.getElementById('MaterialId');
            const weightInput = document.getElementById('MaterialWeight');
            const totalCostInput = document.getElementById('TotalCost');
            const costEstimation = document.getElementById('costEstimation');
            
            function updateCostEstimation() {
                const selectedOption = materialSelect.options[materialSelect.selectedIndex];
                const weight = parseFloat(weightInput.value) || 0;
                
                if (selectedOption && selectedOption.value && weight > 0) {
                    const costPerGram = parseFloat(selectedOption.getAttribute('data-cost-per-gram'));
                    const estimatedCost = weight * costPerGram;
                    
                    totalCostInput.value = estimatedCost.toFixed(2);
                    
                    costEstimation.innerHTML = `
                        <div class="row">
                            <div class="col-6">
                                <strong>Material Cost:</strong><br>
                                <span class="text-primary">$${estimatedCost.toFixed(2)}</span>
                            </div>
                            <div class="col-6">
                                <strong>Weight:</strong><br>
                                <span>${weight}g</span>
                            </div>
                        </div>
                        <hr>
                        <small class="text-muted">This is an estimate based on material cost only. Additional costs (electricity, labor, etc.) will be added separately.</small>
                    `;
                } else {
                    totalCostInput.value = '';
                    costEstimation.innerHTML = '<p class="text-muted">Select a material and enter weight to see cost estimation</p>';
                }
            }
            
            materialSelect.addEventListener('change', updateCostEstimation);
            weightInput.addEventListener('input', updateCostEstimation);
            
            // Calculate on page load
            updateCostEstimation();
        });
    </script>
}
