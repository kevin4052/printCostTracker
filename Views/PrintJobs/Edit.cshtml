@model printCostTracker.Models.PrintJob

@{
    ViewData["Title"] = "Edit Print Job";
}

<h1>Edit Print Job</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedAt" />
            
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            
            
            <div class="form-group mb-3">
                <label asp-for="PrinterId" class="control-label">Printer</label>
                <select asp-for="PrinterId" class="form-control">
                    <option value="">-- Select Printer --</option>
                    @if (ViewBag.Printers != null)
                    {
                        @foreach (var printer in ViewBag.Printers)
                        {
                            <option value="@printer.Id">@printer.Name - @printer.Brand @printer.Model</option>
                        }
                    }
                </select>
                <span asp-validation-for="PrinterId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="PrintSettings" class="control-label">Print Settings</label>
                <textarea asp-for="PrintSettings" class="form-control" rows="2" placeholder="Layer height, infill, speed, etc."></textarea>
                <span asp-validation-for="PrintSettings" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="TotalCost" class="control-label">Total Cost ($)</label>
                <input asp-for="TotalCost" class="form-control" type="number" step="0.01" min="0" id="TotalCost" />
                <small class="form-text text-muted">Manually adjust or leave as-is; detailed costs can be added via Costs.</small>
                <span asp-validation-for="TotalCost" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="CompletedAt" class="control-label">Completed At</label>
                <input asp-for="CompletedAt" class="form-control" type="datetime-local" />
                <small class="form-text text-muted">Leave empty if job is still in progress</small>
                <span asp-validation-for="CompletedAt" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Notes</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Update plates, parts, and individual costs in their respective sections.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // No dynamic cost estimation; costs are managed via Costs/Plates
        });
    </script>
}
