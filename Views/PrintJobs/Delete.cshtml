@model printCostTracker.Models.PrintJob

@{
    ViewData["Title"] = "Delete Print Job";
}

<h1>Delete Print Job</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this print job?</h3>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@(string.IsNullOrEmpty(Model.Description) ? "-" : Model.Description)</dd>

        <dt class="col-sm-2">Material</dt>
        <dd class="col-sm-10">@(Model.Material?.Name ?? "-")</dd>

        <dt class="col-sm-2">Material Weight</dt>
        <dd class="col-sm-10">@(Model.MaterialWeight > 0 ? $"{Model.MaterialWeight:F1}g" : "-")</dd>

        <dt class="col-sm-2">Estimated Print Time</dt>
        <dd class="col-sm-10">@(Model.EstimatedPrintTime > 0 ? $"{Model.EstimatedPrintTime:F1} hours" : "-")</dd>

        <dt class="col-sm-2">Printer</dt>
        <dd class="col-sm-10">@(Model.Printer?.Name ?? "-")</dd>

        <dt class="col-sm-2">Print Settings</dt>
        <dd class="col-sm-10">@(string.IsNullOrEmpty(Model.PrintSettings) ? "-" : Model.PrintSettings)</dd>

        <dt class="col-sm-2">Total Cost</dt>
        <dd class="col-sm-10">$@Model.TotalCost.ToString("F2")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">
            @if (Model.CompletedAt.HasValue)
            {
                <span class="badge bg-success">Completed</span>
            }
            else
            {
                <span class="badge bg-warning">In Progress</span>
            }
        </dd>

        <dt class="col-sm-2">Created</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("MM/dd/yyyy HH:mm")</dd>

        @if (Model.CompletedAt.HasValue)
        {
            <dt class="col-sm-2">Completed</dt>
            <dd class="col-sm-10">@Model.CompletedAt.Value.ToString("MM/dd/yyyy HH:mm")</dd>
        }
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
