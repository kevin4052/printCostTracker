@model IEnumerable<printCostTracker.Models.Material>

@{
    ViewData["Title"] = "Materials";
}

<h1>Materials</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Material</a>
</p>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Color</th>
                <th>Cost per Gram</th>
                <th>Density</th>
                <th>Status</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@((MaterialType)item.MaterialType)</td>
                    <td>@(string.IsNullOrEmpty(item.Color) ? "-" : item.Color)</td>
                    <td>$@item.CostPerGram.ToString("F3")</td>
                    <td>@item.Density.ToString("F2") g/cmÂ³</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </td>
                    <td>@item.CreatedAt.ToString("MM/dd/yyyy HH:mm")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        No materials found. <a asp-action="Create">Create your first material</a>.
    </div>
} 